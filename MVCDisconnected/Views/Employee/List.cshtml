@model List<MVCDisconnected.Models.Employee>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width ,initial-scale=1" />
    <title>List</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
      <style>
        .center-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            text-align: center;
        }

        table {
            width: 80%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        table th, table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #dee2e6;
        }

        table th {
            background-color: #007bff;
            color: white;
        }

        .button-group {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 8px;
        }

        .btn-dark:hover {
            background-color: #343a40;
            color: white;
        }
        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }
        .btn-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .btn-dark {
            padding: 12px 20px;
            font-size: 1.1rem;
            font-weight: 500;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container center-container">
        <h1>Employee Details</h1>
        <table class="table table-bordered table-hover text-center mt-4">
            <thead>
                <tr>
                    <th>Eno</th>
                    <th>Ename</th>
                    <th>Job</th>
                    <th>Salary</th>
                    <th>Dname</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Eno</td>
                        <td>@item.Ename</td>
                        <td>@item.Job</td>
                        <td>@item.Salary</td>
                        <td>@item.Dname</td>
                        <td>
                            <a href="/Employee/Details/@item.Eno" class="btn btn-dark">Details</a>
                            <a href="/Employee/Update/@item.Eno" class="btn btn-outline-secondary">Edit</a>
                            <a href="/Employee/Delete/@item.Eno" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="button-group">
            <a href="/Employee/Index" class="btn btn-dark">Back to Index</a>
        </div>
    </div>
</body>
</html>
