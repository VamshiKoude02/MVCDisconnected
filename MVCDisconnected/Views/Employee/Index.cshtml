@model List<MVCDisconnected.Models.Employee>
<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width initial-scale=1" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .center-container {
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 20px;
        }

        .button-group {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }
        .btn {
            padding: 12px 20px;
            font-size: 1.1rem;
            font-weight: 500;
            border-radius: 8px;
        }
        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container center-container">
        <img src="~/Content/Images/images.jfif"/>
        <h1>Choice Solutions Employees Data</h1>
        <hr class="w-50" />
        <div>
            <a href="/Employee/List" class="btn btn-outline-primary me-4">Employee List</a>
            <a href="/Employee/Create" class="btn btn-outline-primary">New Employee</a>
        </div>
    </div>
</body>
</html>
